generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  SAVINGS
  STOCK_SAVINGS
  CHECKING
  INVESTMENT
  OTHER
}

enum DebtType {
  STUDENT_LOAN
  CONSUMER_LOAN
  MORTGAGE
  CREDIT_CARD
}

enum RecordType {
  DEPOSIT
  WITHDRAWAL
  INTEREST
  TRANSFER
}

enum IncomeFrequency {
  WEEKLY
  MONTHLY
  YEARLY
}

model Account {
  id        String   @id @default(cuid())
  name      String
  type      AccountType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  records   AccountRecord[]
}

model AccountRecord {
  id        String   @id @default(cuid())
  accountId String
  type      RecordType @default(DEPOSIT)
  amount    Int      // Amount in øre (1 kr = 100 øre)
  description String?
  date      DateTime @default(now()) // Date when the transaction occurred
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  
  @@index([accountId])
  @@index([createdAt])
  @@index([date])
}

model Debt {
  id        String   @id @default(cuid())
  name      String
  type      DebtType
  amount    Int      // Amount in øre (1 kr = 100 øre)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Income {
  id        String   @id @default(cuid())
  name      String   @default("Income")
  amount    Int      // Amount in øre (1 kr = 100 øre)
  frequency IncomeFrequency @default(MONTHLY)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id            String   @id @default(cuid())
  currency      String   @default("NOK")
  dateFormat    String   @default("DD/MM/YYYY")
  numberFormat  String   @default("1 234,56")
  currencyDisplay String @default("symbol")
  capitalGoal   Int      @default(100000000) // Default 1,000,000 kr in øre
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}